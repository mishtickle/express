<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<body>
<h1><%= title %></h1>
<!-- In views/index.ejs -->
<form action="/users/search" method="POST">
    <label for="search">Search:</label>
    <input type="email" name="search" id="search" placeholder="email@email.com">
    <button type="submit">Search</button>
  </form>
<ul>
    <% if (locals.user) {%>
      
      <li>ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>, Email: <%= user.email %>, Age: <%= user.age %>, Bio: <%= user.bio %></li>
      <a href="/users/<%= user.id %>/update">Update</a>
      <!-- This time we're sending a POST request to our route, so we need a form. -->
      <form action="/users/<%= user.id %>/delete" method="POST" style="display:inline;">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
      </form>
    <% } %>
  </ul>
  
<a href="/users/create">Create a user</a>
</body>
</html>
